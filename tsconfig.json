{
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules",
    "**/*.d.ts"
  ],
  "compilerOptions": {
    "outDir": ".",
    "rootDir": "src",
    "module": "ES6",
    "target": "ES2021",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "strict": true,
    "declaration": true,
    "lib": [
      "es2021",
      "dom"
    ]
  }
}
